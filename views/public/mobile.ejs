<%- include("links/header"); -%>
        <div class="row">
            <%- include("links/navbar"); -%>
            <div class="col-lg-9 pt-3" style="height:500px;">

                <% if(msg!=''){ %>
                    <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <strong><%= msg %></strong>.
                    </div>
                    <% } %>
               <form action="/store_mobile" method="post">
                 <div class="form-group">
                    <label for="">Phone</label>
                    <input type="number" 
                      class="form-control" name="phone" value="" id="" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">Help text</small>
                  </div>
                  <div class="form-group">
                    <label for="">Amount</label>
                    <input type="number"
                      class="form-control" name="amount" id="" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">Help text</small>
                  </div>
                  
                  <div class="form-group">
                    <label for="">Provider</label>
                    <select class="form-control" name="details" id="">
                      <option value="Airtel">Airtel</option>
                      <option value="JIO">JIO</option>
                      <option value="VodaFone">VodaFone</option>
                    </select>
                  </div>
        
                  
                <button type="submit" class="btn btn-primary">Recharge Mobile</button>
               </form>


            </div>
        </div>
      </div>
      <%- include("links/footer"); -%>